<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelPlannerAPP.MainPage"
             NavigationPage.HasNavigationBar="false">

    <ContentPage.Content>
        <Grid BackgroundColor="#6D0808">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                
                <RowDefinition Height="*"/>
                
            </Grid.RowDefinitions>

            <!-- StackLayout with the label -->
            <StackLayout Grid.Row="0" BackgroundColor="#6D0808">
                <Label Text="Travel Planner" TextColor="White" FontSize="Large" 
                   FontAttributes="Bold" HorizontalOptions="Center" Padding="60" />
            </StackLayout>

            
            <Image Grid.Row="1" Source="WelcomeMap.jpg" Aspect="AspectFill" />
        </Grid>
    </ContentPage.Content>
    

</ContentPage>
